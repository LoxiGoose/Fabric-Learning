{
  "schemaVersion": 1,
  "id": "lifesteal",
  "version": "${version}",

  "custom": {
    "cardinal-components": [
      "lifesteal:bannedmap"
    ]
  },

  "name": "Lifesteal",
  "description": "Lifesteal is a Minecraft mod inspired by the original Lifesteal SMP plugin where killing other players steals their hearts for your own gain.",
  "authors": [
    "LoxiGoose",
    "bredtxt",
    "Zophoro"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/lifesteal-loxifabric",
    "sources": "https://github.com/LoxiGoose/Lifesteal-Fabric"
  },

  "license": "GNU GENERAL PUBLIC LICENSE",
  "icon": "assets/lifesteal/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.goose.lifesteal.LifeSteal"
    ],
    "cardinal-components": [
      "net.goose.lifesteal.component.ComponentRegistry"
    ],
    "client": []
  },
  "mixins": [
    "lifesteal.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.12",
    "fabric-api": "*",
    "minecraft": "~1.19.3",
    "java": ">=17",
    "com_electronwill_night-config_core": "*",
    "com_electronwill_night-config_toml": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}
