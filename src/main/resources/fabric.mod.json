{
  "schemaVersion": 1,
  "id": "lifesteal",
  "version": "${version}",
  "custom": {
    "cardinal-components": [
      "lifesteal:uuidblockposmap",
      "lifesteal:healthdata"
    ]
  },
  "name": "Lifesteal",
  "description": "A mod where killing other players steals their hearts. This is a forge interpretation of the Lifesteal SMP.",
  "authors": [
    "LoxiGoose",
    "bredtxt",
    "Zophoro"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/lifesteal-forge",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "GNU GENERAL PUBLIC LICENSE",
  "icon": "assets/lifesteal/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.goose.lifesteal.LifeSteal"
    ],
    "cardinal-components": [
      "net.goose.lifesteal.component.ComponentRegistry"
    ],
    "client": [
      "net.goose.lifesteal.LifeStealClient"
    ]
  },
  "mixins": [
    "lifesteal.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.12",
    "fabric-api": "*",
    "minecraft": "~1.19.2",
    "java": ">=17",
    "com_electronwill_night-config_core": "*",
    "com_electronwill_night-config_toml": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}
